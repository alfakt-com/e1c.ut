
Процедура ПриОткрытии()
	
	Если РольДоступна("ПолныеПрава") Тогда
		ЭлементыФормы.ПроцентБонусов.Доступность = Истина;	
		ЭлементыФормы.ПроцентБонусовВКредит.Доступность = Истина;        
		ЭлементыФормы.НаКонкретнуюПРограммуКред.Доступность = Истина;
		ЭлементыФормы.КредитнаяПрограмма.Доступность = Истина;
	КонецЕсли;	
	
	Если ЭлементыФормы.НастройкаЗаНаличку.Значение = Истина Тогда 
		ЭлементыФормы.ПроцентБонусов.Доступность = Истина;		
	КонецЕсли;
	
	Если ЭлементыФормы.НастройкаВКредит.Значение = Истина Тогда 
		ЭлементыФормы.ПроцентБонусовВКредит.Доступность = Истина;
		ЭлементыФормы.НаКонкретнуюПРограммуКред.Доступность = Истина;
	КонецЕсли;
	
	Если ЭлементыФормы.НаКонкретнуюПРограммуКред.Значение = Истина Тогда 
		ЭлементыФормы.КредитнаяПрограмма.Доступность = Истина;
	КонецЕсли;
	
	Если ЗначениеЗаполнено(ЭлементыФормы.ДатаКон.Значение) тогда
		Если ЭлементыФормы.ДатаКон.Значение < ТекущаяДата() и Не РольДоступна("ПолныеПрава") Тогда
			ТолькоПросмотр = Истина;
		КонецЕсли;
	КонецЕсли;
	
КонецПроцедуры

Процедура ОгранПоНомГруппЗаНалПриИзменении(Элемент)
	
	Если ЭлементыФормы.ОгранПоНомГруппЗаНал.Значение = Истина Тогда
		ЭлементыФормы.ОгранПоНомЗаНал.Значение = Ложь;
		ЭлементыФормы.ОгранПоЦенГрупЗаНал.Доступность = Истина;
	Иначе 
		ЭлементыФормы.ОгранПоНомГруппЗаНал.Значение = Ложь;
		ЭлементыФормы.ОгранПоЦенГрупЗаНал.Доступность = Ложь;
		ЭлементыФормы.ОгранПоЦенГрупЗаНал.Значение = Ложь;
	КонецЕсли;
	
КонецПроцедуры

Процедура ОгранПоНомЗаНалПриИзменении(Элемент)
	
	Если ЭлементыФормы.ОгранПоНомЗаНал.Значение = Истина Тогда
		ЭлементыФормы.ОгранПоНомГруппЗаНал.Значение = Ложь;
		ЭлементыФормы.ОгранПоЦенГрупЗаНал.Значение = Ложь;
		ЭлементыФормы.ОгранПоЦенГрупЗаНал.Доступность = Ложь;
	Иначе 
		ЭлементыФормы.ОгранПоНомЗаНал.Значение = Ложь;		
	КонецЕсли;

КонецПроцедуры

Процедура ОгранПоНомГруппВКредПриИзменении(Элемент)
	
	Если ЭлементыФормы.ОгранПоНомГруппВКред.Значение = Истина Тогда
		ЭлементыФормы.ОгранПоНомВКред.Значение = Ложь;
		ЭлементыФормы.ОгранПоЦенГрупВКред.Доступность = Истина;
	Иначе 
		ЭлементыФормы.ОгранПоНомГруппВКред.Значение = Ложь;
		ЭлементыФормы.ОгранПоЦенГрупВКред.Доступность = Ложь;
		ЭлементыФормы.ОгранПоЦенГрупВКред.Значение = Ложь;
	КонецЕсли;

КонецПроцедуры

Процедура ОгранПоНомВКредПриИзменении(Элемент)
	
	Если ЭлементыФормы.ОгранПоНомВКред.Значение = Истина Тогда
		ЭлементыФормы.ОгранПоНомГруппВКред.Значение = Ложь;
		ЭлементыФормы.ОгранПоЦенГрупВКред.Значение = Ложь;
		ЭлементыФормы.ОгранПоЦенГрупВКред.Доступность = Ложь;
	Иначе 
		ЭлементыФормы.ОгранПоНомВКред.Значение = Ложь;		
	КонецЕсли;

КонецПроцедуры

Процедура НастройкаВКредитПриИзменении(Элемент)
	
	Если ЭлементыФормы.НастройкаВКредит.Значение = Истина Тогда
		ЭлементыФормы.НаКонкретнуюПРограммуКред.Доступность = Истина;	
		ЭлементыФормы.ПроцентБонусовВКредит.Доступность = Истина;
		ЭлементыФормы.ОгранПоНомВКред.Доступность = Истина;
		ЭлементыФормы.ОгранПоНомГруппВКред.Доступность = Истина;
	Иначе 
		ЭлементыФормы.НаКонкретнуюПРограммуКред.Доступность = Ложь;	
		ЭлементыФормы.ПроцентБонусовВКредит.Доступность = Ложь;
		ЭлементыФормы.ОгранПоНомВКред.Доступность = Ложь;
		ЭлементыФормы.ОгранПоНомГруппВКред.Доступность = Ложь;
		ЭлементыФормы.ОгранПоЦенГрупВКред.Доступность = Ложь;
		ЭлементыФормы.КредитнаяПрограмма.Доступность = Ложь;
		
		ЭлементыФормы.НаКонкретнуюПРограммуКред.Значение = Ложь;	
		ЭлементыФормы.ПроцентБонусовВКредит.Значение = Ложь;
		ЭлементыФормы.ОгранПоНомВКред.Значение = Ложь;
		ЭлементыФормы.ОгранПоНомГруппВКред.Значение = Ложь;
		ЭлементыФормы.ОгранПоЦенГрупВКред.Значение = Ложь;
		ЭлементыФормы.КредитнаяПрограмма.Значение = Справочники.мчт_КредитныеПрограммы.ПустаяСсылка();
		ЭлементыФормы.ПроцентБонусовВКредит.Значение = Число(0);

	КонецЕсли;
	
	
КонецПроцедуры

Процедура НаКонкретнуюПРограммуКредПриИзменении(Элемент)
	
	Если ЭлементыФормы.НаКонкретнуюПРограммуКред.Значение = Истина Тогда
		ЭлементыФормы.КредитнаяПрограмма.Доступность = Истина;	
	Иначе
		ЭлементыФормы.КредитнаяПрограмма.Доступность = Ложь;
		ЭлементыФормы.КредитнаяПрограмма.Значение = Справочники.мчт_КредитныеПрограммы.ПустаяСсылка();	
	КонецЕсли;
КонецПроцедуры
